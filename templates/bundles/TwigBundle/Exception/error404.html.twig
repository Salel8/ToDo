{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{#{% block title %}404 Erreur{% endblock%}#}

{% block stylesheets %}
    <link href="{{ asset('css/erreur404.css') }}" rel="stylesheet"/>
    {{ parent() }}
{% endblock%}

{% block body %}
    <div id="erreur">
        <h1>404 Page introuvable</h1>

        <p>
            La page demandé n'existe pas. Vérifiez l'URL
            ou <a href="{{ path('homepage') }}">retournez à la page d'accueil</a>.
        </p>
    </div>
{% endblock %}